<script>
  function messageSent() {
    var emptyEmail = document.forms["contactForm"]["email"].value;
    var emptyMessage = document.forms["contactForm"]["message"].value;
    if (emptyEmail == "") {
      alert("You need to fill the email field!");
      return false;
    } else if (emptyMessage == "") {
      alert("You need to fill the message field!");
      return false;
    } else {
      // Send a POST request to the server
      fetch("http://localhost:3000/send", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ email: emptyEmail, message: emptyMessage }),
      })
        .then((response) => response.json())
        .then((data) => {
          alert(
            "Your message has successfully been sent to our contact services!"
          );
        })
        .catch((error) => {
          console.error("Error:", error);
        });
      return false; // Prevent the form from submitting normally
    }
  }
</script>
